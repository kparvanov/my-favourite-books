%h2 Details about #{@book.title}

%ul#details
	%li
		Author:
		= @book.author

	%li 
		Genre:
		= @book.genre

	%li
		ISBN number:
		= @book.isbn

	%li
		Publishing date:
		= @book.publish_date.strftime("%B %d, %Y")

%h3 Description:
%p#description= @book.description

= link_to 'Find Books With Same Author', same_author_path(@book)
%br
= link_to 'Edit info', edit_book_path(@book)
%br
= link_to 'Delete', book_path(@book), :method => :delete
%br
= link_to 'Back to book list', books_path